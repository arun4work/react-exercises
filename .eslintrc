{
    "rules": {
        "semi": "error",
        "max-len": ["error", 180],
        "quotes": ["off", "double"]
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "arrowFunctions": true,
            "binaryLiterals": true,
            "blockBindings": true,
            "classes": true,
            "defaultParams": true,
            "destructuring": true,
            "forOf": true,
            "modules": true,
            "templateStrings": true,
            "unicodeCodePointEscapes": true,
            "globalReturn": true,
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module",
        "plugins": ["react"]
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js"
            }
        },
        "import/extensions": ["js"]
    },
    "extends": "airbnb",
    "plugins": ["react", "jsx-a11y", "import"],
    "indent": [2, 4]
}
